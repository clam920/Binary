<%- include('templates/header', {pageTitle: "Sign Up" }) %>

<!-- Div wraps evreything and centers it -->
  <div style="display: grid; place-items: center;">
    <h2 style="margin: 4vw;">Create User</h2>
    <form action='/createUser' method='post'>
        <!-- Email div -->
      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail31" name='email' required=true>
      </div>

      <!-- Username div -->
      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Username</label>
        <input type="text" class="form-control" id="inputEmail3" name='username' required=true>
      </div>

      <!-- Password Div -->
      <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
        <input type="password" class="form-control" id="inputPassword3" name='password' required="true">
      </div>
      <div style="display: grid; place-items: center;">
        <button type="submit" class="btn btn-primary" style="width: auto;">Sign up</button>
      </div>
    </form><br><br>

    <!-- redirect to the login -->
    <p style="text-align: center;">already have an account? <a href='/login'>Sign in</a></p>
  </div>

  <%- include('templates/footer') %>